<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:mariadb://localhost:3306/hibernateexe</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MariaDB103Dialect</property>

        <property name="show_sql">true</property>

        <property name="format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.pool_size">10</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="src/main/java/jpa/entitymodels/Course.java" />
        <mapping class="src/main/java/jpa/entitymodels/Student.java" />

    </session-factory>
</hibernate-configuration>